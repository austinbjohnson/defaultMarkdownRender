{
  "name": "markdown-live-render",
  "displayName": "Markdown Live Render",
  "description": "WYSIWYG markdown editor with live sync for AI collaboration",
  "version": "0.1.1",
  "publisher": "ajohnson",
  "icon": "media/logo_motion_square.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/austinbjohnson/defaultMarkdownRender"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "markdownLiveRender.editor",
        "displayName": "Markdown Live Render",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ],
    "configuration": {
      "title": "Markdown Live Render",
      "properties": {
        "markdownLiveRender.defaultView": {
          "type": "string",
          "enum": [
            "rendered",
            "source"
          ],
          "enumDescriptions": [
            "Open markdown files in the live rendered view (WYSIWYG editor)",
            "Open markdown files as raw source text"
          ],
          "default": "rendered",
          "description": "Choose how markdown files open by default. You can always switch views using Cmd+Shift+M (Mac) or Ctrl+Shift+M (Windows/Linux)."
        }
      }
    },
    "commands": [
      {
        "command": "markdownLiveRender.openWith",
        "title": "Open with Markdown Live Render"
      },
      {
        "command": "markdownLiveRender.openAsText",
        "title": "Open Markdown as Raw Text"
      },
      {
        "command": "markdownLiveRender.toggle",
        "title": "Toggle Markdown Rendered/Raw View"
      },
      {
        "command": "markdownLiveRender.toggleDefaultView",
        "title": "Markdown Live Render: Toggle Default View"
      }
    ],
    "keybindings": [
      {
        "command": "markdownLiveRender.toggle",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "resourceExtname == .md"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@milkdown/core": "^7.3.6",
    "@milkdown/ctx": "^7.3.6",
    "@milkdown/plugin-history": "^7.18.0",
    "@milkdown/plugin-listener": "^7.3.6",
    "@milkdown/preset-commonmark": "^7.3.6",
    "@milkdown/preset-gfm": "^7.3.6",
    "@milkdown/theme-nord": "^7.3.6",
    "@milkdown/utils": "^7.3.6",
    "diff-match-patch": "^1.0.5",
    "js-yaml": "^4.1.1"
  }
}
